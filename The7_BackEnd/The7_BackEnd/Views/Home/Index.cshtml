@model HomeVM
@{
    ViewData["Title"] = "Index";
}

    <!-- Main start -->
    <main>
        <section id="intro">
            <div class="container">
                <div class="intro-container d-flex flex-column align-items-center justify-content-center text-center">
                    <h1 class="intro-title">@Model.PageIntro.Title</h1>
                    <p class="intro-desc">@Model.PageIntro.Subtitle</p>
                    <div class="intro-button">

                        <a class="into-button btn" href="#">Find Out More</a>
                    </div>

                </div>
            </div>
        </section>
        <section id="services">
            <div class="container">
                    <div class="row">
                    <div class="services-title text-center">
                        <h1>OUR SERVICES</h1>
                    </div>
                    <div class="services-card-area">
                        <div class="service-card-group ">
                            <div class="row row-cols-1 row-cols-md-4 g-4">
                                @foreach (var item in Model.Service)
                               {
                                <div class="col">
                                  <div class="card h-100 text-center d-flex justify-content-center align-items-center border-0">
                                    @Html.Raw(item.ServiceIcon)
                                    <div class="card-body">
                                      <h5 class="service-card-title">@item.ServiceTitle</h5>
                                      <p class="service-card-text">@item.ServiceDesc</p>
                                      <a href="#" class="btn btn-success service-button">Read More</a>
                                    </div>
                                  </div>
                                </div>
                               
                               }
                              </div>
                                   
                    </div>
                 </div>
                 </div>
             </div>
        </section>

        <!-- Slider start -->
        <section id="slider">
          
        </section>
        <!-- Slider end -->
   
    <!-- Main end -->

    <section>
    <div class="section" id="blog">
      <div class="container">
        <div class="row">
          <div class="blog-section-title text-center">
            <h3>OUR BLOG</h3>
          </div>
          <div class="blog-card-area">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                @foreach (var item in Model.Blog)
               {
                   
              <div class="col">
                <div class="card">
                  <img src="~/assets/images/post/@item.ImageUrl" class="card-img-top" alt="...">
                  <div class="card-body text-center blog-card-text">
                    <a class="blog-card-title d-flex flex-column justify-content-center align-items-center">@item.Title</a>
                    <span>@item.Subtitle</span>
                    <p class="card-text">@item.Desc</p>
                    <a href="#" class="btn btn-success blog-card-button">Read More</a>
                  </div>
                </div>
              </div>
               }
             
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
