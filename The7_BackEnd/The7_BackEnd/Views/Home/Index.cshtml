  <section id="team">
    <div class="container">
      <div class="row">
        <div class="team-title text-center">
          <h2>OUR TEAM</h2>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model.Team)
           {
          <div class="col-3">
            <div class="card text-center">
              <img src="~/assets/images/team/@item.ImageUrl" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title member-name">@item.Name</h5>
                <p class="member-position">@item.Position</p>
              </div>
            </div>
          </div>
               
           }
         
        </div>
      </div>
    </div>
  </section>
  <section id="contact">
    <div class="container">
      <div class="row">

     
    <div class="contact-title text-center">
      CONTACT
    </div>
    <!-- Form start -->
    <div class="contact-area d-flex">

      <div class="col-6">
        <h3 style="font-size: 3rem;">Talk to us</h3>
        <p style="font-size: 1.6rem;" class="pb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolores iusto fugit esse soluta quae debitis quibusdam harum voluptatem, maxime, aliquam sequi. Tempora ipsum magni unde velit corporis fuga, necessitatibus blanditiis.</p>
        <div class="address d-flex just pb-5">
          <div class="form-icon">
            <i class="fa-solid fa-location-dot pe-2"></i>
          </div>
          <div class="address-text ps-3">
            <h4>Address:</h4>
            <p>9983 City name, Street name, 232 Apartment C</p>
          </div>
        </div>
        <div class="worktime d-flex just">
          <div class="form-icon">
            <i class="fa-solid fa-clock"></i>
          </div>
          <div class="worktime-text ps-3">
            <h4>Work Time:</h4>
            <p>Monday - Friday from 9am to 5pm</p>
          </div>
          
        </div>
        <div class="worktime d-flex just pt-5">
          <div class="form-icon">
            <i class="fa-solid fa-phone"></i>
          </div>
          <div class="worktime-text ps-3">
            <h4>Phone:</h4>
            <p>Monday - Friday from 9am to 5pm</p>
          </div>
          
        </div>
      </div>
      <div class="col-6">
        <form action="#">
          <div class="form-name">
            <input type="text" placeholder="Name*" class="col-12 py-3">
          </div>
          <div class="form-email">
            <input type="text" placeholder="Email*" class="col-12 py-3">
          </div>
          <div class="form-subject">
            <input type="text" placeholder="Subject*" class="col-12 py-3">
          </div>
          <div class="form-textarea">
            
            <textarea class="form-control" rows="10" placeholder="MESSAGE" name="message" required></textarea>
            
          </div>
          <div class="form-button text-end py-5">

            <button type="submit" class="btn btn-success form-button">Send Message</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
